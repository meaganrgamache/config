
" General "
set number
set history=500

filetype plugin on
filetype indent on

" Set to auto read when file is changed from outside "
set autoread

" Set 7 lines to the cursor when moving vertically (j/k) "
set so=7

" Turn on WiLd menu "
set wildmenu

" Ignore compiled files "
set wildignore=*.o,*~,*.pyc

" Always show current position "
set ruler

" Height of command bar "
set cmdheight=2

" Abandon buffer when it becomes hidden "
set hid

" Backspace "
set backspace=eol,start,indent

" Ignore case when searching "
set ignorecase

" Smart case "
set smartcase

set hlsearch
set incsearch
set lazyredraw
set magic
set showmatch
set mat=2

set noerrorbells
set novisualbell
set tm=500

syntax enable
colorscheme desert 
set background=dark

" Set extra options when running in GUI mode "
if has("gui_running")
	set guioptions-=T
	set guioptions+=e
	set t_Co=256
	set guitablabel=%M\ %t
endif 

set encoding=utf8
set ffs=unix,dos,mac

set nobackup
set nowb
set noswapfile

set expandtab
set smarttab

set shiftwidth=4
set tabstop=4

set lbr
set tw=500

set ai
set si
set wrap

map j gj
map k gk

map <space> /
map <c-space> ?
